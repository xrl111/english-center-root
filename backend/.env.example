# Server Configuration
PORT=3000
NODE_ENV=development
API_PREFIX=api
API_TAG=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/learning-platform

# JWT Configuration
JWT_SECRET=change-this-secret-in-production
JWT_REFRESH_SECRET=change-this-refresh-secret-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Auth Configuration
AUTH_SALT_ROUNDS=10
RESET_PASSWORD_EXPIRY=3600000
VERIFICATION_EXPIRY=86400000

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=noreply@learning-platform.com

# File Upload Configuration
UPLOAD_DEST=uploads
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_MIMES=image/*,application/pdf

# Cache Configuration
CACHE_TTL=300
CACHE_MAX=100

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_DIR=logs

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Feature Flags
FEATURE_EMAIL_VERIFICATION=true
FEATURE_SOCIAL_AUTH=false
FEATURE_FILE_UPLOAD=true
FEATURE_CHAT=false

# Social Auth Configuration (if enabled)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# Frontend URLs
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3000/admin
PASSWORD_RESET_URL=http://localhost:3000/auth/reset-password
EMAIL_VERIFICATION_URL=http://localhost:3000/auth/verify-email

# Third-party Services
SENTRY_DSN=
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Security
BCRYPT_SALT_ROUNDS=10
SESSION_SECRET=change-this-session-secret-in-production
COOKIE_SECRET=change-this-cookie-secret-in-production

# Admin Account (created on first run)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme123
ADMIN_USERNAME=admin

# Redis Configuration (if used)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Websocket Configuration (if used)
WS_PORT=3001
WS_PATH=/ws

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_TITLE="Learning Platform API"
SWAGGER_DESCRIPTION="API documentation for the Learning Platform"
SWAGGER_VERSION=1.0
SWAGGER_PATH=docs

# Testing Configuration
TEST_MONGODB_URI=mongodb://localhost:27017/learning-platform-test
TEST_JWT_SECRET=test-jwt-secret
TEST_EMAIL=test@example.com

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."

# Metrics
ENABLE_METRICS=false
METRICS_PORT=9090
METRICS_PATH=/metrics