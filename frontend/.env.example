# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_API_VERSION=v1

# File Upload
NEXT_PUBLIC_UPLOAD_URL=http://localhost:3001/uploads
NEXT_PUBLIC_MAX_FILE_SIZE=5242880

# Authentication
NEXT_PUBLIC_JWT_EXPIRY=1h
NEXT_PUBLIC_REFRESH_TOKEN_EXPIRY=7d

# Feature Flags
NEXT_PUBLIC_ENABLE_REGISTRATION=true
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=false
NEXT_PUBLIC_MAINTENANCE_MODE=false

# Analytics and Monitoring
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_GA_TRACKING_ID=

# Development Settings
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_API_MOCK=false
NEXT_PUBLIC_SHOW_DEVTOOLS=false

# Cache Settings
NEXT_PUBLIC_STALE_TIME=60000
NEXT_PUBLIC_CACHE_TIME=300000

# UI Configuration
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_AVAILABLE_LOCALES=en,th

# Security
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=
NEXT_PUBLIC_CSP_ENABLED=true

# Course Management
NEXT_PUBLIC_MAX_COURSE_STUDENTS=30
NEXT_PUBLIC_MAX_FILE_UPLOADS=5
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# News Management
NEXT_PUBLIC_NEWS_ITEMS_PER_PAGE=12
NEXT_PUBLIC_FEATURED_NEWS_COUNT=3

# Schedule Management
NEXT_PUBLIC_SCHEDULE_START_HOUR=8
NEXT_PUBLIC_SCHEDULE_END_HOUR=20
NEXT_PUBLIC_MIN_SCHEDULE_DURATION=30

# Rate Limiting
NEXT_PUBLIC_MAX_REQUESTS_PER_MINUTE=60

# Error Reporting
NEXT_PUBLIC_ERROR_REPORTING_ENABLED=true
NEXT_PUBLIC_ERROR_REPORTING_LEVEL=error

# Comments
# - Copy this file to .env.local for local development
# - Never commit .env.local to version control
# - Update values according to your environment
# - All variables must be prefixed with NEXT_PUBLIC_ to be accessible in the browser
# - Use these variables in your code with process.env.NEXT_PUBLIC_*